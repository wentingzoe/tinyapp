      </div>
     
   
    
    <% if(!username) { %>

          <form class="d-grid gap-2 d-md-flex justify-content-md-end" action="/login" method="POST"> 
          <input class="form-control" type="text" name="username" placeholder="username" >
          <button class="btn btn-outline-warning" type="submit" value="submit">Login</button> 
          </form>
     
     <% } else {%> 
      <form class="d-grid gap-2 d-md-flex justify-content-md-end" action="/logout" method="POST"> 
        <p>Logged In as: TingApp User!</p>
         <button type="submit" value="submit">Logout</button>   
       </form>
    
       <% } %>


    </div>
  </nav>
